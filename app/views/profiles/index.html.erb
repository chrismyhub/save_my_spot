<center>
<h1>User Feedback</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">State</th>
      <th scope="col">Created at</th>
      <th scope="col">Updated at</th>
    </tr>
  </thead>
  <tbody>
    <% @profiles.each do |profile| %>
        <tr>
        <th scope="row"><%= profile.id %></th>
        <td scope="row"><%= link_to profile.name, profile %></td>
        <td scope="row"><%= profile.australian_state %></td>
        <td scope="row"><%= profile.created_at.to_time.strftime("Created on %d/%m/%Y at %l:%M %p") %></td>
        <td scope="row"><%= profile.updated_at.to_time.strftime("Updated on %d/%m/%Y at %l:%M %p") %></td>
        </tr>
        <% end %>
  </tbody>
</table>