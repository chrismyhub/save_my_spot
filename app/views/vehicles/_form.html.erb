<%= form_with(model: @vehicle, data: {turbo: false}) do |f| %>
<%= f.hidden_field :profile_id, value: @profile_id %>

  <fieldset class="mb-2">
    <p>Type:<br>
        <%= f.select :vehicle_type, [['Car','Car'],['Truck','Truck'],['Van','Van'],['Motorbike','Motorbike'],['Scooter','Scooter'],['Ute','Ute'],['SUV','SUV'],['Other (Please list in Comments)','Other (Please list in Comments)']] %>
    </p>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :color %><br>
    <%= f.text_field :color %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :license_plate %><br>
    <%= f.text_field :license_plate %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :make %><br>
    <%= f.text_field :make %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :year %><br>
    <%= f.text_field :year %>
  </fieldset>
  <fieldset class="mb-2">
    <%= f.label :comments %><br>
    <%= f.text_area :comments %>
  </fieldset>

    <br><%= f.submit class: "btn btn-primary" %>
    <%= link_to('Cancel', vehicles_path(@vehicle), class: 'btn btn-secondary me-2') %>
  </fieldset>
<% end %>
